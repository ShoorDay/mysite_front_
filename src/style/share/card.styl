// 卡片
.card {
    border: 1px solid #EBEEF5;
    background-color: #FFF;
    margin-bottom: 10px;
    border-radius: 2px;
    transition: 0.3s;
    overflow: hidden;

    &.is-hover-shadow:hover, &.is-always-shadow {
        box-shadow: 0 2px 12px 0 rgba(0, 0, 0, 0.1);
    }
}

.card-body {
    padding: 20px;
}

.card-header {
    padding: 12px 20px;
    border-bottom: 1px solid #EBEEF5;
    box-sizing: border-box;
}
